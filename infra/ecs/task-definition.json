{
  "family": "telegram-bot",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "${TASK_EXECUTION_ROLE_ARN}",
  "taskRoleArn": "${TASK_ROLE_ARN}",
  "containerDefinitions": [
    {
      "name": "telegram-bot-container",
      "image": "${IMAGE_URL}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "docker"
        },
        {
          "name": "DB_HOST",
          "value": "${DB_HOST}"
        },
        {
          "name": "DB_NAME",
          "value": "${DB_NAME}"
        },
        {
          "name": "DB_USERNAME",
          "value": "${DB_USERNAME}"
        },
        {
          "name": "CHATGPT_URL",
          "value": "https://genai.hkbu.edu.hk/general/rest"
        },
        {
          "name": "CHATGPT_MODEL",
          "value": "pt-4-o-mini"
        },
        {
          "name": "CHATGPT_API_VERSION",
          "value": "2024-05-01-preview"
        }
      ],
      "secrets": [
        {
          "name": "DB_PASSWORD",
          "valueFrom": "${DB_PASSWORD_SECRET_ARN}"
        },
        {
          "name": "BOT_TOKEN",
          "valueFrom": "${BOT_TOKEN_SECRET_ARN}"
        },
        {
          "name": "BOT_USERNAME",
          "valueFrom": "${BOT_USERNAME_SECRET_ARN}"
        },
        {
          "name": "CHATGPT_TOKEN",
          "valueFrom": "${CHATGPT_TOKEN_SECRET_ARN}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/telegram-bot",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}